extends layout

block content
  nav.navbar.navbar-inverse
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') My App
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li.navbar-text 
            h4.navbar-text 
              i(class='glyphicon glyphicon-user')  #{username}
          li
            a(href='/signout') Sign Out
  .container
    .row
      .col-md-6
        h2 List of Students
        table.table.table-bordered.table-striped.table-hover
          thead
            tr
              th Name
              th Phone Number
              th Email
          tbody
            if allStudents
              for student in allStudents
                tr
                  td= student.name
                  td= student.phone
                  td= student.email
                  td 
                    #[a(class='btn btn-info' href='/students/'+student._id) Show Student]
      .col-md-6
        h2 Add a Student
        hr
        include errors
        form.form-group(action='/students' method='post')
          label(for='name') Name
          input.form-control(type='text' name='name' id='name' placeholder='First Last')
          label(for='phone') Phone Number
          input.form-control(type='text' name='phone' id='phone' placeholder='XXX-XXX-XXXX')
          label(for='email') Email
          input.form-control(type='email' name='email' id='email' placeholder='example@example.com')
          button.btn.btn-success(type='submit') Add Student





















